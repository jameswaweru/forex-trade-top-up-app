<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ForexTopUp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/my_toolbar_color</item>
        <item name="colorPrimaryVariant">@color/status_bar_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ForexTopUp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ForexTopUp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ForexTopUp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="hint__">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/global_hint_text_</item>
        <item name="android:fontFamily">@font/josefinsans_light</item>
    </style>
    <style name="call_support_text_style">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#282828</item>
    </style>

    <style name="notifications_header">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#282828</item>
    </style>
    <style name="MSISDN_transaction_text_style">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#282828</item>
    </style>


</resources>